<h1>Burger Quest!</h1>
<div class="row">

  <div class="col-lg-6">
<h2>Burgers Yet to be Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger-block devoured=false}}      
    {{/unless}}
  {{/each}}
</ul>
  </div>
<div class="col-lg-6">
<h2>Burgers I've Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
